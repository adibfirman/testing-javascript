{
  "name": "static-analysis-testing",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src",
    "flow": "flow",
    "format": "npm run prettier -- --write",
    "prettier": "prettier --write \"src/*.+(js)\"",
    "validate": "npm run lint && npm run prettier -- --list-different && npm run flow"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "lint-staged": {
    "\"src/*.+(js|jsx)\"": [
      "prettier --write"
    ]
  },
  "author": "Adib Firman",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "flow-bin": "^0.92.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4"
  }
}
